<div class="sidebar">
  <section class='sidebar__desc'>
  <h2 class='sidebar__heading'>{{t "About"}}</h2>
  <p class='sidebar__desc_p'>{{@blog.description}}</p>
  </section>

  <nav class='sidebar__nav'>
  <h2 class='sidebar__heading'>{{t "Explore"}}</h2>
  <ul class="sidebar__nav__ul" role="menu">
    <li class="sidebar__nav__li" role="menuitem"><a href="/articles/about">More About</a></li>
    <li class="sidebar__nav__li" role="menuitem"><a href="/articles/newsleter">The MFS Newsletter</a></li>
  </ul>
  </nav>

  <section class='sidebar__social'>
  <h2 class='sidebar__heading'>{{t "Social"}}</h2>
  <ul class='social__ul'>
    {{#if @blog.facebook}}
      <li class='social__li'><a href="{{facebook_url @blog.facebook}}" target="_blank" rel="noopener">{{> "icons/facebook"}}</a></li>
    {{/if}}
    {{#if @blog.twitter}}
      <li class='social__li'><a href="{{twitter_url @blog.twitter}}" target="_blank" rel="noopener">{{> "icons/twitter"}}</a></li>
    {{/if}}
    <li class='social__li'><a href="https://feedly.com/i/subscription/feed/{{@blog.url}}/rss/" target="_blank" rel="noopener">{{> "icons/rss"}}</a></li>
  </ul>
  </section>
</div>
