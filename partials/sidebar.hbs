<section class='sidebar__desc'>
  <h2 class='sidebar__heading'>About</h2>
  <p class='sidebar__desc_p'>{{@blog.description}}</p>
</section>

{{#if @blog.navigation}}
<nav class='sidebar__nav'>
  <h2 class='sidebar__heading'>Explore</h2>
    {{navigation}}
</nav>
{{/if}}

<section class='sidebar__social'>
<h2 class='sidebar__heading'>Social</h2>
  <ul class='sidebar__social__ul'>
    {{#if @blog.facebook}}
      <li class='sidebar__social__li'><a href="{{facebook_url @blog.facebook}}" target="_blank" rel="noopener">{{> "icons/facebook"}}</a></li>
    {{/if}}
    {{#if @blog.twitter}}
      <li class='sidebar__social__li'><a href="{{twitter_url @blog.twitter}}" target="_blank" rel="noopener">{{> "icons/twitter"}}</a></li>
    {{/if}}
    <li class='sidebar__social__li'><a href="https://feedly.com/i/subscription/feed/{{@blog.url}}/rss/" target="_blank" rel="noopener">{{> "icons/rss"}}</a></li>
  </ul>
</section>
