{{#foreach posts}}

<article class="{{post_class}} post">
		<header class="post-header">
			<h2 class="post-header__title"><a class="post-header__title-link" href="{{url}}">{{{title}}}</a></h2>
			<span class="post-header__meta">By {{author}} &middot; <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time></span>
			<div class="clear"></div>
		</header>

		<section class="post__excerpt">
			<p class="post__excerpt__p">{{excerpt}}&hellip;</p>
		</section>
</article>

{{/foreach}}

{{pagination}}
